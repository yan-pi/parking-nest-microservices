generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vehicle {
  id           Int       @id @default(autoincrement())
  licensePlate String    @unique
  model        String
  color        String
  entryTime    DateTime  @default(now())
  exitTime     DateTime?
}
